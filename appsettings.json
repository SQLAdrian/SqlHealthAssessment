{
  "DataSource": "SqlServer",
  "TrustServerCertificate": true,
  "ConnectionStrings": {
    "SqlServer": "Server=.;Database=SQLWATCH;Integrated Security=true;Application Name=SqlHealthAssessment;"
  },
  "RefreshIntervalSeconds": 35,
  "DefaultTimeRangeMinutes": 60,
  "QueryTimeoutSeconds": 60,
  "DataRetentionDays": 30,
  "SqliteMaintenanceIntervalHours": 4,
  "SqliteIntegrityCheckEveryNRuns": 6,
  "MaxCacheSizeBytes": 524288000,
  "CacheEvictionHours": 24,
  "MaxQueryRows": 5000,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "SqlHealthAssessment": "Debug"
    },
    "File": {
      "Path": "logs/app-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30
    }
  },
  "SessionManagement": {
    "Enabled": true,
    "IdleTimeoutMinutes": 60,
    "RefreshRateWhenIdleMinutes": 30
  },
  "RateLimiting": {
    "Enabled": true,
    "MaxQueriesPerMinute": 50,
    "ShowWarningPopup": true
  },
  "AuditLogRetention": {
    "Enabled": true,
    "RetentionDays": 90
  },
  "CheckExecution": {
    "MaxResultsPerInstance": 500
  }
}

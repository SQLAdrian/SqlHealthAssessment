{
  "DataSource": "SqlServer",
  "TrustServerCertificate": true,
  "ConnectionStrings": {
    "SqlServer": "Server=.;Database=SQLWATCH;Integrated Security=true;Application Name=SqlHealthAssessment;"
  },
  "RefreshIntervalSeconds": 35,
  "DefaultTimeRangeMinutes": 60,
  "QueryTimeoutSeconds": 60,
  "DataRetentionDays": 7,
  "liveQueriesMaintenanceIntervalHours": 4,
  "liveQueriesIntegrityCheckEveryNRuns": 6,
  "MaxCacheSizeBytes": 104857600,
  "CacheEvictionHours": 1,
  "MaxQueryRows": 2000,
  "MaxCachedTimeSeriesRows": 1000,
  "MaxChartDataPoints": 500,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "SqlHealthAssessment": "Debug"
    },
    "File": {
      "Path": "logs/app-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30
    }
  },
  "SessionManagement": {
    "Enabled": true,
    "IdleTimeoutMinutes": 60,
    "RefreshRateWhenIdleMinutes": 30
  },
  "RateLimiting": {
    "Enabled": true,
    "MaxQueriesPerMinute": 50,
    "ShowWarningPopup": true
  },
  "AuditLogRetention": {
    "Enabled": true,
    "RetentionDays": 90
  },
  "CheckExecution": {
    "MaxResultsPerInstance": 500
  },
  "SessionData": {
    "MaxSessionsToDisplay": 100
  }
}
